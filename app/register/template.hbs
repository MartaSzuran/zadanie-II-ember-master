{{page-title "Register"}}

<Header>Register</Header>
<div class="container">
  <form {{on 'submit' this.onSubmit}}>
    <div class="mb-3 row">
      <label for="username" class="col-sm-2 col-form-label">Username</label>
      <div class="col-sm-10">
        <input 
          type="text" 
          class="form-control" 
          id="username" 
          placeholder="username"
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input 
          type="password" 
          class="form-control" 
          id="inputPassword"
          placeholder="password"
          {{on 'input' this.onPasswordChange}}
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input 
          type="text" 
          class="form-control" 
          id="email" 
          placeholder="email"
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="photoURL" class="col-sm-2 col-form-label">PhotoURL</label>
      <div class="col-sm-10">
        <input 
          type="text" 
          class="form-control" 
          id="photoURL" 
          placeholder="photoURL"
          {{on 'input' this.onLoginChange}}
        />
      </div>
    </div>
    <div class="mb-3 row">
      <button 
        type="submit" 
        class="btn btn-primary"   
        >Login
      </button> 
    </div>
  </form>
  <div>
    <span>Mam ju≈º konto. </span><LinkTo @route="login">Login</LinkTo>
  </div>
</div>

{{outlet}}