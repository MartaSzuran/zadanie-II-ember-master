{{page-title "Login"}}

<Header>Login</Header>
<div class="container">
  <div class="mb-3 row">
    <label for="staticEmail" class="col-sm-2 col-form-label">Login</label>
    <div class="col-sm-10">
      <input 
      type="text" 
      class="form-control" 
      id="staticEmail" 
      placeholder="your@email.com"
      {{on 'input' this.onLoginChange}}
      />
    </div>
  </div>
  <div class="mb-3 row">
    <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input 
      type="password" 
      class="form-control" 
      id="inputPassword"
      placeholder="password"
      {{on 'input' this.onPasswordChange}}
      />
    </div>
  </div>
  <div class="mb-3 row">
    <button type="button" class="btn btn-primary" {{on 'click' this.onSubmit}}>Login</button> 
  </div>
</div>

{{outlet}}